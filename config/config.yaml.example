# Operation Mode
mode: "ollama"                                        # Options: 'ollama' or 'digital_ocean'

# Ollama Configuration (Local LLM)
ollama_config:
  api_url: "http://localhost:11434"                   # Ollama API URL
model: "mistral"                                       # Ollama model name

# API Configuration (for compatibility)
api_url: "http://localhost:11434"
api_key: "ollama"                                      # Not used by Ollama, but kept for compatibility

# DigitalOcean Configuration
digital_ocean:
  agent_id: "your-agent-id"                          # DigitalOcean agent ID
  agent_key: "your-agent-key"                        # Authentication key
  agent_endpoint: "https://your-endpoint.app/api/v1"  # API endpoint
  model: "model-name"                                # Model to use

# Security Settings
security:
  auto_approve_commands: false                        # Automatic command approval
  require_approval: true                              # Manual approval requirement
